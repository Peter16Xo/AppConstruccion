<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Material"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_nombre_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Material"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:inputType="number"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costo por Unidad"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_costo_unidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Costo por Unidad"
            android:inputType="numberDecimal"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Uso"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_fecha_uso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Uso"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observaciones"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_observaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observaciones"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID de Obra"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_edit_id_obra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID de la obra"
            android:inputType="number"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_actualizar_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar Material"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:onClick="actualizarMaterial" />
    </LinearLayout>
</ScrollView>
