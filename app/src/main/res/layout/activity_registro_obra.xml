<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_nombre_proyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Nombre del Proyecto"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Cliente"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_ubicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="UbicaciÃ³n"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_fecha_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Fecha de Inicio (dd/mm/aaaa)"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_fecha_fin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Fecha Fin Estimada (dd/mm/aaaa)"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btn_guardar_obra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Obra"
            android:backgroundTint="#F9A825"
            android:textColor="#FFFFFF"
            android:onClick="guardarObra" />

    </LinearLayout>
</ScrollView>
